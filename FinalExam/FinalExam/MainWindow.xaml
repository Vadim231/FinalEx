<Window x:Class="FinalExam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalExam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid >
        <DataGrid  x:Name="dataGrid1" MinColumnWidth="100" CanUserReorderColumns="True" AutoGenerateColumns="False" SelectionMode="Single" SelectionUnit="Cell" Margin="10,13,13,10" Background="LightGray" RowBackground="LightYellow" AlternatingRowBackground="LightBlue" BorderBrush="Gray" BorderThickness="5" CanUserSortColumns="False" RowEditEnding="dataGrid1_RowEditEnding" AddingNewItem="DataGrid1_AddingNewItem_1" BeginningEdit="DataGrid1_BeginningEdit_1" KeyDown="DataGrid1_KeyDown_1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="id" Width="75" CanUserResize="False" MinWidth="25" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Название"  Width="200" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Цена" Width="200" Binding="{Binding Count}"/>
                <DataGridTextColumn Header="Кол-во"  Width="200" Binding="{Binding Price}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
